i=int(input('Podaj rok: '))
if i%4==0 and i%100==0 and i%400==0 :
print('rok przestępny')
elif i%4!=0:
print('rok nie przestępny')
elif i%100!=0:
print('rok przestępny')
else:
print('rok nie przestepny')

