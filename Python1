f=float(input('Podaj liczbę zmiennoprzecinkową: '))
g=float(input('Podaj liczbę zmiennoprzecinkową: '))
f1=int(f % 100 // 1)
f2=(f-f1)
g1=int(g % 100 // 1)
g2=(g-g1)
wf=f1+g2
wg=g1+f2
print(round(wf,2))
print(wg)

i=int(input('Podaj liczbę: '))
j=int(input('podaj liczbę: '))
if i**j > j**i:
print(i, "do",j,"=",i ** j,"jest większe od",j, "do",i, "=",j ** i)
else:
print(j, "do",i,"=",j ** i,"jest większe od",i, "do",j, "=",i ** j)

